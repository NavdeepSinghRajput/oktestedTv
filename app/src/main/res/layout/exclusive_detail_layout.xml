<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardViewExclusive"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/cardCornerRadius_5dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:background="@color/cardblack"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/exclusiveView"
            android:layout_width="@dimen/cardImageSizeWidth"
            android:layout_height="@dimen/cardImageSizeHeight"
            android:scaleType="fitXY"
            android:src="@drawable/ic_heart_white_24dp" />

        <TextView
            android:id="@+id/exclusiveName"
            android:layout_width="400dp"
            android:layout_height="60dp"
            android:layout_gravity="left"
            android:text="asdasdasdasdasjdashdasdahsdghashdasdgahsdgagsdg"
            android:paddingHorizontal="@dimen/padding_5dp"
            android:textSize="@dimen/showTitileTextSize"
            android:textStyle="bold"
            android:maxLines="2"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/exclusiveType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:paddingHorizontal="@dimen/padding_5dp"
            android:paddingBottom="@dimen/margin_10dp"
            android:text="asgdsdsds"
            android:textSize="@dimen/showTypeTextSize"
            android:maxLines="2"
            android:textColor="@color/yellow" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
