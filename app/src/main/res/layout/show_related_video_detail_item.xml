<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/showRelatedCardView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="30dp"
    android:elevation="@dimen/cardelevation_5dp"
    android:orientation="vertical"
    android:padding="@dimen/padding_5dp"
    app:cardCornerRadius="@dimen/cardCornerRadius_5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/videoImage"
            android:scaleType="fitXY"
            android:layout_width="@dimen/cardImageSizeWidth"
            android:layout_height="@dimen/cardImageSizeHeight"
            android:src="@color/lb_tv_white" />

        <LinearLayout
            android:weightSum="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_weight="0.3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:fontFamily="@font/roboto_medium"
                    android:text="ttuytyuuiytrtuyiuytryuiuytiuytiuyuiuyuiuiiuyiuiuyiuy"
                    android:maxLines="2"
                    android:textColor="@color/lb_tv_white"
                    android:id="@+id/videoTitleName"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="@dimen/margin_10dp"
                    android:textSize="20dp" />

                <TextView
                    android:layout_marginBottom="@dimen/margin_10dp"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/pink"
                    android:text="654787ghb"
                    android:id="@+id/videoType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/margin_10dp"
                    android:textSize="16dp" />
            </LinearLayout>

            <ImageView
                android:visibility="gone"
                android:layout_weight="0.7"
                android:id="@+id/showName"
                android:layout_margin="@dimen/margin_10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_play_circle_24dp" />
        </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>
