<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/editorlayout"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/editor_gradient"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/editorShowType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:clickable="false"
                android:fontFamily="@font/roboto_medium"
                android:text="Tries"
                android:textColor="@color/yellow"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/editorShowTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_medium"
                android:text="Transforming into K Pop star"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/editorShowDes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_medium"
                android:text="10:05"
                android:textColor="@color/gressih"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/editorShowCreatedOn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="20dp"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_medium"
                android:text="June 23 2020"
                android:textColor="@color/gressih"
                android:textSize="16dp" />

            <Button
                android:id="@+id/watchNow"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_margin="20dp"
                android:background="#414141"
                android:drawableRight="@drawable/play_icon"
                android:padding="10dp"
                android:text="watch now   "
                android:textSize="24dp" />

            <Button
                android:id="@+id/fav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_10dp"
                android:padding="20dp"
                android:text="Follow"
                android:visibility="gone" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/imagelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <com.tv.oktested.utils.ScaleImageView
                android:id="@+id/editor_view"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop"
                android:src="@drawable/editor_pick_banner" />
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>
