<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:id="@+id/cardViewShow"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/margin_10dp"
    android:padding="@dimen/padding_5dp"
    app:cardCornerRadius="@dimen/cardCornerRadius_5dp"
    android:elevation="@dimen/cardelevation_5dp"
    android:orientation="vertical">

    <LinearLayout
        android:background="@color/cardblack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <ImageView
        android:id="@+id/showImages"
        android:layout_width="@dimen/cardImageAnchorShow"
        android:layout_height="@dimen/cardImageSizeHeight"
        android:scaleType="fitXY"
        android:src="@color/lb_tv_white"/>
    <TextView
        android:layout_margin="@dimen/margin_10dp"
        android:id="@+id/showName"
        android:layout_width="match_parent"
        android:fontFamily="@font/roboto_medium"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:minLines="2"
        android:text="navi"
        android:src="#E7E7E7"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
