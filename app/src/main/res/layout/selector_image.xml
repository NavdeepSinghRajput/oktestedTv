<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="20dp"
    android:id="@+id/cardViewExclusive"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/cardCornerRadius_5dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/exclusiveView"
            android:layout_width="@dimen/cardImageSizeWidth"
            android:layout_height="@dimen/cardImageSizeHeight"
            android:scaleType="fitXY"
            android:src="@drawable/ic_heart_white_24dp" />

        <LinearLayout
            android:weightSum="1"
            android:id="@+id/selectorInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_weight="0.15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView
                android:id="@+id/exclusiveName"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="left"
                android:maxLines="2"
                android:paddingHorizontal="@dimen/padding_5dp"
                android:text="asdasdasdasdasjdashdasdahsdghashdasdgahsdgagsdg"
                android:textColor="@color/white"
                android:textSize="@dimen/showTitileTextSize"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/exclusiveType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:maxLines="2"
                android:paddingHorizontal="@dimen/padding_5dp"
                android:paddingBottom="@dimen/margin_10dp"
                android:text="asgdsdsds"
                android:textColor="@color/yellow"
                android:textSize="@dimen/showTypeTextSize" />
            </LinearLayout>

            <LinearLayout
                android:visibility="visible"
                android:id="@+id/selectorView"
                android:gravity="center"
                android:layout_weight="0.85"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/showplayicon"/>

                <TextView
                    android:id="@+id/exclusiveDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxLines="2"
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:paddingHorizontal="@dimen/padding_5dp"
                    android:paddingBottom="@dimen/margin_10dp"
                    android:text="9:10"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="@dimen/showTypeTextSize" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
